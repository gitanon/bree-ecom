.footer
  border-bottom solid 1px footer-hr

.footer_wrap
  width 198px

.address
  color footer-text
  font-family font_family
  font-size 13px
  font-style normal
  font-weight 400

.social
  display flex
  flex-flow row nowrap
  margin-top 15px

.fb::after,
.fb:after
  sprite($sprite_icon_fb)
  content ""
  position absolute
  margin-left -($sprite_icon_fb_width/2)
  top ($sprite_icon_fb_height/1.5)

.tw::after,
.tw:after
  sprite($sprite_icon_tw)
  content ""
  position absolute
  margin-left -($sprite_icon_tw_width/2)
  top ($sprite_icon_tw_height/1.5)

.hz::after,
.hz:after
  sprite($sprite_icon_hz)
  content ""
