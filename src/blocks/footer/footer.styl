  position absolute
  top ($sprite_icon_hz_height/1.5)

.rss::after,
.rss:after
  sprite($sprite_icon_rss)
  content ""
  margin-left -($sprite_icon_rss_width/2)
  position absolute
  top ($sprite_icon_rss_height/1.5)

.copyright
  color footer-text
  font-family font_family
  font-size 12px
  font-weight 400
  width 230px

.copyright_bold
  font-weight 700
