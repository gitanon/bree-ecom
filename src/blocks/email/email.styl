.email
  background pale
  margin 10px 0
  padding 43px 0

.email__coupon
  background yellow
  border-radius 50%
  box-shadow 2.5px 4.3px 9px rgba(1, 1, 1, 0.14)
  color white
  font-family font_family
  font-size 16px
  font-weight 400
  left 0
  line-height 1
  height 154px
  position absolute
  text-align center
  top -48px
  width 154px
  
.email__coupon_text
  display inline-block
  padding-top 32px

.email__coupon_dollar
  font-size 51px
  font-weight 700
  line-height 1

.email__coupon_ten
  font-size 61px
  font-weight 700
  line-height 0

.email__text
  color brown
  font-family font_family
  font-size 24px
  font-weight 700
  margin-right 40px
  width 345px

.email__form
  position relative

.email__input
  color email_input-color
  background white
  border solid 2px email_border-color
  border-radius 45px
  font-family font_family
  font-size 13px
  font-weight 400
  margin-right 62px
  padding 14px 26px 12px
  position relative
  width 276px
  z-index 2

.email__button
  sprite($sprite_icon-email)
  cursor pointer
  background white
  border solid 2px email_border-color
  border-radius 45px
  padding 20px 50px 19px
  position absolute
  right 0
  z-index 1
