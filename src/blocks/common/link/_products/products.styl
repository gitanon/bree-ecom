.link_products-load
  border solid 1px border-color
  border-radius 56px
  color product-load
  display inline-block
  font-family font_family
  font-size 16px
  font-weight 700
  margin 0 auto
  padding 18px 70px 17px 70px
  position relative

.link_products-load:hover
  text-decoration none

.link_products-load::before,
.link_products-load:before
  background border-color
  content ""
  height 1px
  left -361px
  position absolute
  top 50%
  width 100%

.link_products-load::after,
.link_products-load:after
  background border-color
  content ""
  height 1px
  right -361px
  position absolute
  top 50%
  width 100%